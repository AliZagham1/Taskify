<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Items</title>
    <link rel="stylesheet" href="/styles.css">
   <link rel="stylesheet" href="/items.css">
  
    
</head>
<body>
    <%- include('partials/header') %>

    <div class="items-container">
        <h1>Tasks</h1>

    
        <% if (items.length === 0) { %>
            <p>No tasks found for this member. Add a new task to get started!</p>
        <% } else { %>
       
            <ul class="items-list">
                <% items.forEach(item => { %>
                    <li class="item">
                        <span class="item-content"><%= item.content %></span>
                        <div class="item-actions">
                        
                            <a href="/items/<%= item.id %>/edit" class="edit-button">Edit</a>
                          
                            <form action="/items/<%= item.id %>?_method=DELETE" method="POST">
                                <button class="delete-button">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } %>

       
        <button class="floating-add-button" onclick="location.href='/members/<%= memberId %>/add-item'">+</button>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
