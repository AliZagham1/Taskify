<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members</title>
    <link rel="stylesheet" href="/styles.css">
   <link rel="stylesheet" href="/members.css">
</head>
<body>
    <%- include ('partials/header') %>

    <!-- Members List -->
    <div class="members-list">
        <% if (members.length === 0) { %>
            <p>No members found. Add a new member to get started!</p>
        <% } else { %>
            <% members.forEach(member => { %>
                <div class="member-item">
                    <h3 class="member-name"><%= member.name %></h3>
                    <div class="member-actions">
                        <a href="/members/<%= member.id %>" class="edit-button">Edit</a>
                        <form action="/members/<%= member.id %>?_method=DELETE" method="POST">
                            <button class="delete-button">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>
    <button class="floating-add-button" onclick="location.href='/add-member'">+</button>

    <%- include ('partials/footer') %>
</body>
</html>
